<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="30dp"
    android:id="@+id/cardItemDonHangBiHuy"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvThoiGianDonHangBiHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:textColor="#FF0600"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTenUserDonHangBiHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvDiaChiDonHangBiHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvSoDienThoaiDonHangBiHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textColor="@color/black"
            android:textSize="15dp" />



        <TextView
            android:id="@+id/tvTongTienDonHangBiHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="đơn giá"
            android:textColor="#FF0000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvTrangThaiDonHangBiHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textColor="#FF0600"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tvLiDoDonHangBiHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lí do"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>